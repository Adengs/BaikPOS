<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.ui.laporan.LaporanFragment">

    <RelativeLayout
        android:id="@+id/layout_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/paddingSmall">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/paddingSmall">

        <LinearLayout
            android:id="@+id/btn_ringkas_jual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingXSmall"
            android:orientation="horizontal">

            <View
                android:id="@+id/v_ringkas_jual"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/paddingXSmall"
                android:background="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_ringkas_jual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="@dimen/paddingXSmall"
                android:paddingBottom="@dimen/paddingXSmall"
                android:text="@string/ringkas_jual" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_penjualan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingXSmall"
            android:orientation="horizontal">

            <View
                android:id="@+id/v_penjualan"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/paddingXSmall"
                android:background="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_penjualan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="@dimen/paddingXSmall"
                android:paddingBottom="@dimen/paddingXSmall"
                android:text="@string/detail_penjualan" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_komisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingXSmall"
            android:orientation="horizontal">

            <View
                android:id="@+id/v_komisi"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/paddingXSmall"
                android:background="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_komisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="@dimen/paddingXSmall"
                android:paddingBottom="@dimen/paddingXSmall"
                android:text="@string/komisi" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_tutup_kasir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingXSmall"
            android:orientation="horizontal">

            <View
                android:id="@+id/v_tutup_kasir"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/paddingXSmall"
                android:background="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_tutup_kasir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="@dimen/paddingXSmall"
                android:paddingBottom="@dimen/paddingXSmall"
                android:text="@string/tutup_kasir_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_kas_kasir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingXSmall"
            android:orientation="horizontal">

            <View
                android:id="@+id/v_kas_kasir"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/paddingXSmall"
                android:background="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_kas_kasir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="@dimen/paddingXSmall"
                android:paddingBottom="@dimen/paddingXSmall"
                android:text="@string/kas_kasir" />
        </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="7">


        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/paddingSmall"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_dark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_laporan"
            android:tint="@color/white"
            android:layout_margin="16dp"
            android:id="@+id/btn_laporan"/>



    </LinearLayout>
</LinearLayout>