<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/paddingSmall">

        <TextView
            android:id="@+id/tv_no_nota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="33120" />

        <TextView
            android:id="@+id/tv_pelanggan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Pelanggan" />

        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:text="30 Feb 2020 10:10" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_proses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:paddingLeft="@dimen/paddingSmall"
                android:paddingTop="@dimen/paddingXXSmall"
                android:paddingRight="@dimen/paddingSmall"
                android:paddingBottom="@dimen/paddingXXSmall"
                android:text="@string/proses"
                android:textColor="@color/green_dark"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray_light"
                android:paddingLeft="@dimen/paddingSmall"
                android:paddingTop="@dimen/paddingXXSmall"
                android:paddingRight="@dimen/paddingSmall"
                android:paddingBottom="@dimen/paddingXXSmall"
                android:text="@string/selesai"
                android:textColor="@color/gray_darker"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_reservasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_reservasi"
                android:paddingLeft="@dimen/paddingSmall"
                android:paddingTop="@dimen/paddingXXSmall"
                android:paddingRight="@dimen/paddingSmall"
                android:paddingBottom="@dimen/paddingXXSmall"
                android:text="@string/reservasi"
                android:textColor="@color/txt_reservasi"
                android:visibility="gone" />

            <!--            Web-->
            <TextView
                android:id="@+id/tv_new_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_reservasi"
                android:paddingLeft="@dimen/paddingSmall"
                android:paddingTop="@dimen/paddingXXSmall"
                android:paddingRight="@dimen/paddingSmall"
                android:paddingBottom="@dimen/paddingXXSmall"
                android:text="@string/new_order"
                android:textColor="@color/txt_reservasi"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_preparing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:paddingLeft="@dimen/paddingSmall"
                android:paddingTop="@dimen/paddingXXSmall"
                android:paddingRight="@dimen/paddingSmall"
                android:paddingBottom="@dimen/paddingXXSmall"
                android:text="@string/preparing"
                android:textColor="@color/green_dark"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red_bg"
                android:paddingLeft="@dimen/paddingSmall"
                android:paddingTop="@dimen/paddingXXSmall"
                android:paddingRight="@dimen/paddingSmall"
                android:paddingBottom="@dimen/paddingXXSmall"
                android:text="@string/reject"
                android:textColor="@color/red_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_ready_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_ungu"
                android:paddingLeft="@dimen/paddingSmall"
                android:paddingTop="@dimen/paddingXXSmall"
                android:paddingRight="@dimen/paddingSmall"
                android:paddingBottom="@dimen/paddingXXSmall"
                android:text="@string/ready_pickup"
                android:textColor="@color/txt_ungu"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="400.000" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light" />
</LinearLayout>

