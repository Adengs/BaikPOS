<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rela_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">


        <TextView
            android:id="@+id/tv_tv_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_nama_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_tv_plus"
            android:layout_alignBottom="@+id/tv_tv_plus"
            android:layout_marginLeft="@dimen/paddingXXLarge"
            android:layout_marginRight="@dimen/paddingXXLarge"
            android:layout_toRightOf="@id/tv_tv_plus"
            android:text="Topping bubble"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="13sp"/>


        <TextView
            android:id="@+id/tv_harga_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_toRightOf="@id/tv_nama_variant"
            android:layout_toLeftOf="@id/img_del_gone"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="end"
            android:textSize="13sp"
            android:text="5.000"/>


        <ImageView
            android:visibility="invisible"
            android:id="@+id/img_del_gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"
            android:layout_marginTop="0dp"
            android:background="#EFEFEF"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>