<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame_content"
    android:fillViewport="true"
    tools:context=".fragment.PesananFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/liner_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/border_gray_3">

            <TextView
                android:id="@+id/tv_tambah_lokasi"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="@string/tambah_lokasi" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/liner_tampil_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/border_gray_3">

            <TextView
                android:id="@+id/tv_tampil_lokasi"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="tampil lokasi" />

        </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_pesanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_pesanan_tambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_pesanan_meja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>